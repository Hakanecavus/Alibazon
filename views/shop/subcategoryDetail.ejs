<%- include('../partials/navbar'); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alibazon | Categories</title>
</head>
<body>
    
    <% if (product_list.length > 0) { %>
        <div class ="container">
            <% for (let product of product_list) { %>
                <div class="row">
                    <div class="col">
                        <a href="/product/<%= product.id %>"><img src="/images/<%= product.image_groups[0].images[0].link %>"  id= "<%= product.id %>" class="d-block w-100" ></a>
                        <div class ="container">
                            <h4><%= product.page_description %></h4>
                        </div>
                    
                    </div>
                </div>

            <% } %>
        </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</body>
</html>

