<%- include('../partials/navbar'); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alibazon | Categories</title>
</head>
<body>
  <div class="row mt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/home">Home</a></li>
        <% if(category_list[0].page_title.includes('womens')) { %>
          <li class="breadcrumb-item"><a href="/categories/womens">womens</a></li>
        <% } else { %>
          <li class="breadcrumb-item"><a href="/categories/mens">mens</a></li>
        <% } %>
        <li class="breadcrumb-item active" aria-current="page"><%= category_list[0].page_title%></li>
      </ol>
    </nav>
  </div>
  <% if (category_list.length > 0) { %>
        
    <% for (let category of category_list) { %>
        <div class ="container">
        <div class="row mb-4">
                <div class="col">
                    <div class="card" style="width: 100%;height: auto;object-fit: contain;">
                        <a href="/subcategoryDetail/<%= category.id %>" ><img class="card-img-top" src="/images/<%= category.image %>" alt="Card image cap"></a>
                        <div class="card-body">
                            <h5 class="card-title"><%= category.id %></h5>
                            <p class="card-text"><%= category.page_description %></p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <% } %>

<% } else { %>
<h1>No Products Found!</h1>
<% } %>
</body>
</html>

<%- include('../partials/footer'); -%>